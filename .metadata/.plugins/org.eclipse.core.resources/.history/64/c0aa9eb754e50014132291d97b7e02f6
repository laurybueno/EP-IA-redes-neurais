import java.io.BufferedReader;
import java.io.File;
import java.io.FileReader;


public class Input {
	//abre arquivo (nome no segundo parametro) e retorna a linha especificada (primeiro parametro) desse arquivo
	public String leitura(int quantidade, String nome) {
		String linha = "";
		try{
			File arquivo = new File(nome);
			FileReader fr = new FileReader(arquivo);
			BufferedReader br = new BufferedReader(fr);
			int cont = 0;
			
			while ((cont <= quantidade) && (br.ready())) {
				linha = br.readLine();
				cont++;
			}
			br.close();
			fr.close();
		}
		catch (Exception e){
			System.err.println(e);
		}
		return linha;
	}
}
